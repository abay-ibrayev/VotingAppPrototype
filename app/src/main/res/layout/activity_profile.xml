<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shareholder.abay.finapps.finappsproject.activity.ProfileActivity">

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="30dp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">
        <TableRow
            >
            <TextView
                android:id="@+id/profiletr1tv1"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/profiletr1tv2"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow
            android:background="#fce5a6">
            <TextView
                android:id="@+id/profiletr2tv1"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/profiletr2tv2"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow
            android:background="#fce5a6">
            <TextView
                android:id="@+id/profiletr3tv1"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/profiletr3tv2"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/lastVoteDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center"
        android:text="Последнее голосование:"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/lastVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14sp"/>


</LinearLayout>
